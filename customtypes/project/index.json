{
  "id": "project",
  "label": "Project",
  "format": "page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": { "config": { "label": "UID" }, "type": "UID" },
      "title": {
        "type": "Text",
        "config": { "label": "Title", "placeholder": "" }
      },
      "company": {
        "type": "Text",
        "config": { "label": "Company", "placeholder": "" }
      },
      "location": {
        "type": "Text",
        "config": { "label": "Location", "placeholder": "" }
      },
      "start_date": {
        "type": "Timestamp",
        "config": { "label": "Start Date", "placeholder": "" }
      },
      "end_date": {
        "type": "Timestamp",
        "config": { "label": "End date", "placeholder": "" }
      },
      "is_current": {
        "type": "Boolean",
        "config": {
          "label": "Current",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": false
        }
      },
      "attributes": {
        "type": "Group",
        "config": {
          "label": "Attributes",
          "fields": {
            "icon": {
              "type": "Text",
              "config": { "label": "Icon", "placeholder": "" }
            },
            "icon_description": {
              "type": "Text",
              "config": { "label": "Icon Description", "placeholder": "" }
            },
            "text": {
              "type": "Text",
              "config": { "label": "Text", "placeholder": "" }
            }
          }
        }
      },
      "description": {
        "type": "StructuredText",
        "config": {
          "label": "Description",
          "placeholder": "",
          "allowTargetBlank": true,
          "single": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "accent_colour": {
        "type": "Color",
        "config": { "label": "Accent Colour", "placeholder": "" }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": { "choices": {} }
      }
    },
    "SEO & Metadata": {
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": { "height": 1260, "width": 2400 },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      },
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      }
    }
  }
}
